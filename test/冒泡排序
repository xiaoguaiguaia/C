#include <stdio.h>
void bubble_sort(int arr[],int sz)
{
    //确定冒泡排序的次数
    int i = 0;
    for(i=0;i<sz-1;i++)
    {
        int flag = 1;//假设这一次要排序的数据已经有序
        //每一次冒泡排序
        int j = 0;
        int tmp = 0;
        for(j=0;j<sz-1-i;j++)
        {
            tmp = arr[j];
            arr[j] = arr[j+1];
            arr[j+1] = tmp;
            flag = 0;//本次排序结果不完全有序
        }
        if(flag == 1)
            break;
    }
}
int main()
{
    int arr[] = {9,8,7,6,5,4,3,2,1,0};
    int i = 0;
    int sz = sizeof(arr)/sizeof(arr[0]);
    bubble_sort(arr,sz);//冒泡排序
    for(i=0;i<sz;i++)
        printf("%d ",arr[i]);
    return 0;
}
