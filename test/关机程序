#include <stdio.h>
#include <stdlib.h>
#include "string.h"
int main()
{
    char input[20] = {0};
    system("shutdown -s -t 60");
    while(1)
    {
        printf("电脑将在60秒内关机，输入\"我爱你\"取消关机\n请输入：");
        scanf("%s",input);
        if(strcmp(input,"我爱你") == 0)
        {
            system("shutdown -a");
            break;
        }
    }

}
